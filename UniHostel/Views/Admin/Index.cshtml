@model IEnumerable<UniHostel.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="box-body table-responsive no-padding">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Host.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Host.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Host.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Host.Address)
                </td>
                <td>
                    @*<a href="@Url.Action("Details", new { id = item.ID })">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Details
                        </a>*@
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    @*<a href="javascript:void(0)" onclick="confirmDeleteContent(@item.ID)">
                            <i class="fa fa-times-circle" aria-hidden="true"></i> Delete
                        </a>*@
                </td>
            </tr>
        }

    </table>
</div>

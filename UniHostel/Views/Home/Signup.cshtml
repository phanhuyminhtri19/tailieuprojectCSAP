@model UniHostel.Models.UserRenterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/ampleadmin/ampleadmin-html/ampleadmin-sidebar/css")
    <link href="~/Content/ampleadmin/ampleadmin-html/ampleadmin-sidebar/css/colors/megna-dark.css" rel="stylesheet" id="theme" />
    <title>Register</title>

</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <section id="wrapper" class="new-login-register">
        <div class="lg-info-panel">
            <div class="inner-panel">
                <a href="javascript:void(0)" class="p-20 di">
                    <img src="../Content/ampleadmin/ampleadmin-html/ampleadmin-sidebar/../plugins/images/admin-logo.png">
                </a>

            </div>
        </div>
        <div class="new-login-box">
            <div class="white-box">
                <h3 class="box-title m-b-0">Sign UP to RENTER</h3>
                <small>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</small>
                <form class="form-horizontal new-lg-form" id="loginform" method="post" action="@Url.Action("Signup")">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.Username, new { htmlAttributes = new { @class="form-control",
                                    @required = "required",
                                        @placeholder = "Username" }})
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.FullName, new { htmlAttributes = new { @class="form-control",
                           @required = "required",
                           @placeholder = "FullName"}})
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.Mail, new { htmlAttributes = new { @class="form-control",
                           @required = "required",
                           @placeholder = "Email"}})
                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.HomeTown, new { htmlAttributes = new { @class="form-control",
                           @required = "required",
                           @placeholder = "HomeTown"}})
                            @Html.ValidationMessageFor(model => model.HomeTown, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.Phone, new { htmlAttributes = new { @class="form-control",
                           @required = "required",
                           @placeholder = "Phone"}})
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.Password, new { htmlAttributes = new { @class="form-control",
                           @required = "required",
                           @type= "password",
                           @placeholder = "Password"}})
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" required="required"
                                   placeholder="Confirm Password" name="ConfirmPassword">
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.EditorFor(item => item.RoomID, new { htmlAttributes = new { @class="form-control",
                           @required = "required",
                           @placeholder = "Ask the host to have roomID"}})
                            @Html.ValidationMessageFor(model => model.RoomID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light"
                                    type="submit">
                                Sign Up
                            </button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Already have an account? <a href="@Url.Action("Login")" class="text-danger m-l-5"><b>Sign In</b></a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    @Scripts.Render("~/Content/ampleadmin/ampleadmin-html/ampleadmin-sidebar")
</body>

</html>